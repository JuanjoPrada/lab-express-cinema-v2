{{!-- This view should have all the movie titles and movie images displaying --}}

<div class="container">

    <h1>Ironhack Cinema</h1>
    <h4>Click on the movie to check the showtimes</h4>
    <div class="row">
        {{#each allMovies}}
        <div class="col-md-4">
            <img src="{{image}}" alt="movie image">
            <h4>{{title}}</h4>
            <span><a href="/movieDetails/{{_id}}">See more</a></span>
        
        </div>
        {{/each}}
    </div>
</div>